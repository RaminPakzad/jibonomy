<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transactionGlimpseLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_side">

    <ImageView
        android:id="@+id/transactionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/margin_side"
        android:background="@color/transparent"
        android:src="@android:drawable/arrow_up_float" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:orientation="vertical">
        <TextView
            android:id="@+id/amountOfTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size" />
        <TextView
            android:id="@+id/dateOfTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/highlightText"
            android:textSize="@dimen/tiny_text_size" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/categoryImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/margin_side"
        android:background="@color/transparent"
        android:src="@drawable/question" />


</RelativeLayout>
